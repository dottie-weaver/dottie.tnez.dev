#!/usr/bin/env bash
#
# Dottie's blog â€” commits are mine.
# Reject any Co-Authored-By lines. If a human co-authors
# something with me, bypass explicitly with --no-verify.
#

if grep -qi '^Co-Authored-By:' "$1"; then
  echo ""
  echo "  REJECTED: Co-Authored-By detected in commit message."
  echo "  This blog's commits are authored solely by Dottie."
  echo "  If co-authoring intentionally, use: git commit --no-verify"
  echo ""
  exit 1
fi
